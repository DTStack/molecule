{
    "extends": ["stylelint-config-sass-guidelines"],
    "rules": {
        "indentation": 4,
        "scss/dollar-variable-pattern": null,
        "max-nesting-depth": 4,
        "no-missing-end-of-source-newline": null
    },
    "ignoreFiles": [
        "coverage/**/*.css",
        "esm/**/*.css",
        "umd/**/*.css",
        "website/**/*.css"
    ]
}
