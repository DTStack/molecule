{
    "name": "molecule",
    "version": "0.9.0",
    "description": "A Web IDE UI Framework built by React.js, inspired by VSCode.",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest --coverage",
        "dev": "start-storybook -s ./dist -p 6006",
        "build-storybook": "build-storybook",
        "check-types": "tsc --skipLibCheck",
        "build": "tsc --project tsconfig.build.json",
        "eslint": "eslint ./src/**/*.ts ./src/**/*.tsx",
        "stylelint": "stylelint ./src/**/*.scss",
        "prettier": "prettier --ignore-unknown --check . ",
        "release": "standard-version",
        "web": "webpack serve --env prod --config ./build/web.js"
    },
    "keywords": [
        "react.js",
        "vscode",
        "ui",
        "ide"
    ],
    "author": "Ziv",
    "license": "ISC",
    "dependencies": {
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.9",
        "dt-utils": "^1.0.1",
        "immutability-helper": "^3.1.1",
        "loadsh": "^0.0.4",
        "monaco-editor": "^0.21.2",
        "rc-collapse": "^2.0.1",
        "rc-tree": "^3.10.0",
        "react": "^16.13.1",
        "react-dnd": "^9.3.4",
        "react-dnd-html5-backend": "^9.3.4",
        "rc-tabs": "11.7.0",
        "react-dom": "^16.13.1",
        "react-split-pane": "^0.1.92",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.3.0",
        "vscode-codicons": "^0.0.10"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@storybook/addon-actions": "6.0.28",
        "@storybook/addon-knobs": "^6.0.28",
        "@storybook/addon-links": "6.0.28",
        "@storybook/addon-notes": "^5.3.21",
        "@storybook/addons": "6.0.28",
        "@storybook/react": "6.0.28",
        "@types/jest": "^26.0.0",
        "@typescript-eslint/eslint-plugin": "^3.1.0",
        "@typescript-eslint/parser": "^3.1.0",
        "css-loader": "^4.3.0",
        "eslint": "^7.1.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-react": "^7.20.0",
        "husky": "^4.3.0",
        "jest": "^26.0.1",
        "monaco-editor-webpack-plugin": "^2.0.0",
        "prettier": "^2.1.2",
        "react-docgen-typescript-loader": "^3.7.2",
        "sass": "^1.26.10",
        "sass-loader": "^10.0.2",
        "standard-version": "^9.0.0",
        "style-loader": "^1.2.1",
        "stylelint": "^13.7.1",
        "stylelint-config-sass-guidelines": "^7.1.0",
        "ts-jest": "^26.1.0",
        "ts-loader": "^7.0.5",
        "typescript": "^3.9.5",
        "webpack-cli": "^4.0.0",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^5.2.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-push": "prettier --ignore-unknown --write ."
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
