{
    "name": "molecule",
    "version": "0.9.0",
    "description": "A Web IDE UI Framework built by React.js, inspired by VSCode.",
    "main": "lib/index.js",
    "scripts": {
        "preinstall": "node ./build/preinstall.js",
        "test": "jest --no-cache --coverage",
        "dev": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "build-css": "webpack --config ./build/webpack.css.js",
        "check-types": "tsc",
        "build": "rm -rf lib & tsc --project tsconfig.build.json & yarn build-css",
        "eslint": "eslint ./src/**/*.ts ./src/**/*.tsx",
        "stylelint": "stylelint **/*.{css,scss,sass}",
        "prettier": "prettier --ignore-unknown .",
        "release": "standard-version",
        "web": "webpack serve --env prod --config ./build/web.js"
    },
    "keywords": [
        "react.js",
        "vscode",
        "ui",
        "ide"
    ],
    "author": "Ziv",
    "license": "ISC",
    "dependencies": {
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.9",
        "immutability-helper": "^3.1.1",
        "loadsh": "^0.0.4",
        "monaco-editor": "^0.21.2",
        "rc-collapse": "~2.0.1",
        "rc-dialog": "8.2.1",
        "rc-textarea": "~0.3.1",
        "rc-tree": "~3.10.0",
        "rc-util": "~5.5.0",
        "react": "^16.13.1",
        "react-dnd": "^9.3.4",
        "react-dnd-html5-backend": "^9.3.4",
        "react-dom": "^16.13.1",
        "react-scrollbars-custom": "^4.0.25",
        "react-split-pane": "^2.0.3",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.3.0",
        "vscode-codicons": "^0.0.12"
    },
    "devDependencies": {
        "@babel/core": "^7.12.16",
        "@babel/plugin-proposal-class-properties": "^7.12.13",
        "@babel/plugin-proposal-decorators": "^7.12.13",
        "@babel/plugin-transform-runtime": "^7.12.15",
        "@babel/preset-env": "^7.12.16",
        "@babel/preset-react": "^7.12.13",
        "@babel/preset-typescript": "^7.12.16",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@dtinsight/dt-utils": "^1.0.1",
        "@storybook/addon-actions": "6.1.10",
        "@storybook/addon-knobs": "^6.1.10",
        "@storybook/addon-links": "6.1.10",
        "@storybook/addon-notes": "^5.3.21",
        "@storybook/addons": "6.1.10",
        "@storybook/react": "6.1.10",
        "@testing-library/react": "^11.2.5",
        "@types/jest": "^26.0.0",
        "@typescript-eslint/eslint-plugin": "^3.1.0",
        "@typescript-eslint/parser": "^3.1.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^4.3.0",
        "eslint": "^7.1.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-react": "^7.20.0",
        "extract-loader": "^5.1.0",
        "husky": "^4.3.0",
        "jest": "^26.0.1",
        "monaco-editor-webpack-plugin": "^2.0.0",
        "prettier": "^2.1.2",
        "react-test-renderer": "^17.0.1",
        "sass": "^1.26.10",
        "sass-loader": "^10.0.2",
        "standard-version": "^9.0.0",
        "style-loader": "^1.2.1",
        "stylelint": "^13.7.1",
        "stylelint-config-sass-guidelines": "^7.1.0",
        "typescript": "^4.0.5",
        "webpack-cli": "^4.0.0",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^5.2.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-push": "yarn prettier --write"
        }
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
