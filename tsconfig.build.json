{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "outDir": "esm",
        "module": "es6",
        "target": "es6",
        "declaration": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "rootDirs": ["src"]
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/__tests__/*", "stories/**/*", "test/**/*"]
}
